"""Lint our source files."""

from __future__ import print_function

import glob
import os
import sys

import hterm
import libdot


def _get_default_paths():
    """Get list of paths to lint by default."""
    os.chdir(hterm.DIR)
    # All files in js/*.js.
    # Sort to ensure hterm.js comes before hterm_other.js, etc.
    return sorted(glob.glob(os.path.join('js', '*.js')))


def main(argv):
    """The main func!"""
    return libdot.lint.main(argv, paths=_get_default_paths(),
                            closure_args=['--jscomp_error=lintChecks'])


if __name__ == '__main__':
    sys.exit(main(sys.argv[1:]))
